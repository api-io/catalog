{
  "name": "wuffle-api",
  "description": "A task board for GitHub issues",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "install": "lerna run install",
    "all": "run-s lint test build",
    "lint": "lerna run lint",
    "dev": "set NODE_ENV=development && lerna run dev",
    "build": "set NODE_ENV=production && lerna run build",
    "test": "set NODE_ENV=test && lerna run test",
    "auto-test:app": "lerna run auto-test --scope=packages/app",
    "auto-test": "set NODE_ENV=test && run-s auto-test:*",
    "start": "lerna run start --scope=wuffle-api-bot",
    "postinstall": "set NODE_ENV=development && lerna bootstrap",
    "prerelease": "npm run all",
    "release": "lerna publish",
    "af": "npm audit fix"
  },
  "devDependencies": {
    "eslint": "^8.32.0",
    "eslint-plugin-bpmn-io": "^1.0.0",
    "lerna": "^6.4.1",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": "18.x",
    "npm": "8.x"
  }
}
